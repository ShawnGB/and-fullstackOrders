{
  "name": "fullstack-orders",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run db:dev\" \"npm run backend:dev\" \"npm run frontend:dev\"",
    "db:dev": "docker-compose up",
    "backend:dev": "npm run start:dev --prefix backend",
    "frontend:dev": "PORT=3001 npm run dev --prefix frontend",
    "backend:install": "npm install --prefix backend",
    "frontend:install": "npm install --prefix frontend",
    "install:all": "npm run backend:install && npm run frontend:install"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
